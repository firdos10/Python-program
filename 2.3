import tkinter as tk
from tkinter import font
class FontChangerApp:
    def __init__(self, master):
        self.master = master
        master.title("Font Changer")
        # Label to display text
        self.label = tk.Label(master, text="Sample Text", font=("Helvetica", 12))
        self.label.pack(pady=20)
        # Font Name Entry
        self.font_name_label = tk.Label(master, text="Font Name:")
        self.font_name_label.pack()
        self.font_name_entry = tk.Entry(master)
        self.font_name_entry.pack()
        # Font Size Entry
        self.font_size_label = tk.Label(master, text="Font Size:")
        self.font_size_label.pack()
        self.font_size_entry = tk.Entry(master)
        self.font_size_entry.pack()
        # Bold Checkbutton
        self.bold_var = tk.BooleanVar()
        self.bold_check = tk.Checkbutton(master, text="Bold", variable=self.bold_var)
        self.bold_check.pack()
        # Change Font Button
        self.change_font_button = tk.Button(master, text="Change Font", command=self.change_font)
        self.change_font_button.pack(pady=10)
    def change_font(self):
        font_name = self.font_name_entry.get() or "Helvetica"
        font_size = self.font_size_entry.get()

        if font_size.isdigit():
            font_size = int(font_size)
        else:
            font_size = 12  # Default size if invalid
        font_style = font.Font(family=font_name, size=font_size, weight="bold" if self.bold_var.get() else "normal")
        self.label.config(font=font_style)
if __name__ == "__main__":
    root = tk.Tk()
    app = FontChangerApp(root)
    root.mainloop()
    
